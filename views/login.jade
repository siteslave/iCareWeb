extends ./layouts/Login

block content
  br
  div(flex-container="column", flex-align="space-between center")
    form(name="frmLogin", action="/login", method="POST")
      div(flex-item="6", style="width: 400px;", class="card p+")
        .fs-title.display-block
          i.mdi.mdi-account-key.icon.icon--l.icon--green.icon--circled
          | &nbsp; เข้าสู่ระบบ (Login system)

        lx-text-field(label="Username")
          input(type="text", ng-model="username", ng-required="true", name="username")
        lx-text-field(label="Password")
          input(type="password", ng-model="password", ng-required="true", name="password")

        button(type="submit", ng-disabled="frmLogin.$invalid").btn.btn--l.btn--green.btn--raised เข้าสู่ระบบ
