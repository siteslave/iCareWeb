//- Main page
div(flex-container="row")
  div(flex-item)
    #progress

.fab.button-fab
  button.fab__primary.btn.btn--xl.btn--red.btn--fab(ng-click="showMe()", lx-ripple, lx-tooltip="เพิ่มตัวชี้วัด", tooltip-position="left")
    i.mdi.mdi-plus
    i.mdi.mdi-open-in-new
